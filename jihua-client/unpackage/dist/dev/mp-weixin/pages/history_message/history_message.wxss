
.choice_d_w_m {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 180rpx;
	margin-left: 50rpx;
	margin-top: 40rpx;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.choice_d_w_m view {
	border: 1rpx solid black;
	width: 60rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-weight: bold;
}
.choice_d_w_m view:first-child {
	-webkit-border-top-left-radius: 30rpx;
	        border-top-left-radius: 30rpx;
	-webkit-border-bottom-left-radius: 30rpx;
	        border-bottom-left-radius: 30rpx;
	padding-left: 10rpx;
	border-right: 0rpx;
}
.choice_d_w_m view:nth-child(3) {
	-webkit-border-top-right-radius: 30rpx;
	        border-top-right-radius: 30rpx;
	-webkit-border-bottom-right-radius: 30rpx;
	        border-bottom-right-radius: 30rpx;
	padding-right: 10rpx;
	border-left: 0rpx;
}
.total_record {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 500rpx;
	margin: 40rpx auto;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.total_record .record_son {
	border: 1rpx solid black;
	width: 150rpx;
	height: 100rpx;
	line-height: 50rpx;
	text-align: center;
	font-weight: bold;
}
.total_record .record_son:nth-child(2) {
	width: 200rpx;
}
.total_record .record_son:first-child {
	-webkit-border-top-left-radius: 30rpx;
	        border-top-left-radius: 30rpx;
	-webkit-border-bottom-left-radius: 30rpx;
	        border-bottom-left-radius: 30rpx;
